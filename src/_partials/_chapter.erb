<li class="flex items-center mb-16">
  <img src="<%= relative_url 'images/icon-book-open.svg' %>" alt="book icon" class="hidden md:block md:w-20 md:h-20 mr-6" />
  <div>
    <a class="hover:underline underline-offset-1"
      href="<%= chapter.url %>" target="_blank">
      <h3 class="mb-1.5 text-xl md:text-2xl font-heading"><%= chapter.title %></h3>
    </a>
    <div class="flex flex-col gap-x-4 text-base md:text-lg">
      <span>
        <span class='font-semibold'>Chapter Authors: </span>
        <% chapter.authors.each do |author| %>
          <span class="<%= 'font-semibold' if author == 'Hanniball, K. B.' %>">
            <%= author %>
          </span>
          <%= ', ' unless author == chapter.authors.last %>
        <% end %>
      </span>
      <span><span class='font-bold'>Book:</span> <%= chapter.book %> by <%= chapter.book_author %></span>
      <span><span class='font-bold'>Year:</span> <%= chapter.year %></span>
    </div>
  </div>
</li>
